{% block links %}
	<link rel="stylesheet" href="/assets/css/ded.css">
{% endblock %}

<dialog open class="debug-container">
	<button class="close-debug">
		<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<line x1="18" y1="6" x2="6" y2="18"></line>
			<line x1="6" y1="6" x2="18" y2="18"></line>
		</svg>
	</button>

	<section class="error-section">
		<header class="error-header">
			<h2 class="error-title">{{ _error.title }}</h2>
			<span class="error-message">
				<strong>Message:</strong>
				{{ _error.message }}
			</span>
		</header>

		<div class="error-details">
			{% include "@Infra/DED/source-code.twig" %}
			{% include "@Infra/DED/stack-trace.twig" %}
		</div>
	</section>
</dialog>


{% block scripts %}
	<script src="/assets/js/copyToClipboard.js"></script>
{% endblock %}