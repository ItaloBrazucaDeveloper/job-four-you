{% import "Macros/icones-categoria-servico.twig" as obterIconeDaCategoriaServico %}

{% if categorias is not empty %}
	<section class="py-12">
		<div class="max-w-7xl mx-auto px-6">
			<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

				{% for key, categoria in categorias %}
					<div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
						<div class="p-8 text-center">
							<i class="bi {{ obterIconeDaCategoriaServico.render(categoria.nome) }} text-4xl text-yellow-600 mb-3"></i>
							<h3 class="text-xl font-bold text-gray-800 mb-2">
								{{ categoria.nome }}
							</h3>
							<p class="text-gray-600 mb-6">
								Profissionais para cuidar de crian√ßas com responsabilidade e carinho.
							</p>
							<a href="/servicos?categoria={{ key }}"
									class="inline-block bg-yellow-500 hover:bg-yellow-600 text-gray-100 font-medium py-2 px-6 rounded-full transition-colors">
									Ver Prestadores
							</a>
						</div>
					</div>
				{% endfor %}

			</div>
		</div>
	</section>
{% endif %}