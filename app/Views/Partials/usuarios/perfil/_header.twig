<!-- CABEÇALHO DO PERFIL -->
<div class="bg-dark-800 px-8 py-6">
  <div class="flex flex-col md:flex-row items-center gap-6">
    <div class="relative">
      <img
        src="{{ usuario.foto ?: '/images/fotoperfil.jpg' }}"
        alt="Foto de perfil"
        class="rounded-full border-4 border-primary-500"
      >
      <button class="absolute bottom-2 right-2 bg-primary-500 hover:bg-primary-600 text-gray-100 rounded-full p-2">
        <i class="fas fa-camera"></i>
      </button>
    </div>
    <div class="text-center md:text-left">
      <h1 class="text-2xl font-bold">
        {{ usuario.nome }}
      </h1>
      <p class="text-gray-300 mt-1">
        Olá {{ usuario.nome|split(' ')|first }}!
      </p>
      <div class="mt-3 flex justify-center md:justify-start gap-2">

        {% if usuario.tipo == 'prestador' %}
          <span class="bg-blue-500/10 text-blue-500 px-3 py-1 rounded-full text-sm">
            Prestador
          </span>
        {% else %}
          <span class="bg-primary-500/10 text-primary-500 px-3 py-1 rounded-full text-sm">
            Usuário
          </span>
        {% endif %}

      </div>
    </div>
  </div>
</div> 