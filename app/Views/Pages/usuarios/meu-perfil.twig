{% extends "root.layout.twig" %}

{% block title %}Meu Perfil | Job4You{% endblock %}

{% block content %}
	<!-- CONTEÚDO PRINCIPAL DO PERFIL -->
	<main class="flex-grow">
		<div class="max-w-4xl mx-auto px-6 py-8">
			<div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">

				{% include "Partials/usuarios/_header.twig" %}
				{% include "Partials/usuarios/_nav.twig" %}

				<!-- SEÇÃO DE PERFIL -->
				<div id="perfil" class="p-6 md:p-8">
					<h2 class="text-xl font-bold text-gray-800 mb-6">Informações Pessoais</h2>

					<form action="{{ usuario.tipo == 'prestador' ? '/prestadores/atualizar-perfil' : '/usuarios/atualizar-perfil' }}" method="POST" class="space-y-6">
						<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
							{% include "Partials/usuarios/_form-fields.twig" %}
						</div>

						<div class="pt-4">
							<button type="submit" class="w-full bg-primary-500 hover:bg-primary-600 text-white py-3 px-4 rounded-md font-medium transition-colors">
								<i class="bi bi-save mr-2"></i>
								Salvar Alterações
							</button>
						</div>
					</form>
				</div>

				{% if usuario.tipo == 'prestador' %}
					{% include "Partials/usuarios/_servico.twig" %}
				{% endif %}
			</div>
		</div>
	</main>
{% endblock %}
