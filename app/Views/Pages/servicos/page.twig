{% extends "root.layout.twig" %}

{% block title %}Serviços | Job4You{% endblock %}

{% block styles %}
    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Configuração personalizada do Tailwind -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            500: '#F59E0B',
                            600: '#D97706',
                        },
                        dark: {
                            800: '#1F2937',
                            900: '#111827',
                        }
                    },
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                }
            }
        }
    </script>

    <!-- Ícones do Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Fonte Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Glider CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.css">
{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="bg-white py-12">
        <div class="max-w-7xl mx-auto px-6 text-center">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">
                {% if categoria %}
                    Prestadores de {{ categoria.nome }}
                {% else %}
                    Encontre Serviços Informais em Diversas Categorias
                {% endif %}
            </h1>
            <p class="text-xl text-gray-600">
                {% if categoria %}
                    Profissionais qualificados nesta categoria
                {% else %}
                    Todas as categorias disponíveis estão listadas abaixo
                {% endif %}
            </p>
        </div>
    </section>

    {% if categoria %}
        {% if prestadores|length > 0 %}
            <!-- Carrossel de Prestadores -->
            <section class="py-12 bg-gray-50 relative">
                <div class="max-w-7xl mx-auto px-6 relative">
                    <div class="glider-contain">
                        <div class="glider">
                            {% for prestador in prestadores %}
                                <!-- Prestador -->
                                <div class="px-2">
                                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                                        <div class="p-6 text-center">
                                            <div class="h-32 w-32 mx-auto mb-4 rounded-full overflow-hidden bg-gray-200">
                                                <img src="{{ prestador.foto ? '/uploads/' ~ prestador.foto : '/img/fotoperfil.jpg' }}" 
                                                     alt="{{ prestador.nome }}" 
                                                     class="h-full w-full object-cover">
                                            </div>
                                            <h3 class="text-xl font-bold text-gray-800 mb-2">{{ prestador.nome }}</h3>
                                            <p class="text-gray-600 mb-1">{{ prestador.categoria }}</p>
                                            <p class="text-gray-500 text-sm mb-3">
                                                <i class="bi bi-cash-stack mr-1"></i> R$ {{ prestador.valor|number_format(2, ',', '.') }}
                                            </p>
                                            <div class="flex justify-center text-yellow-400 mb-4">
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-fill"></i>
                                                <i class="bi bi-star-half"></i>
                                                <span class="text-gray-500 text-xs ml-1">({{ prestador.quantidade_favorito }})</span>
                                            </div>
                                            <button onclick="prestadorModal.open(
                                                '{{ prestador.nome|escape('js') }}', 
                                                '{{ prestador.categoria|escape('js') }}', 
                                                'R$ {{ prestador.valor|number_format(2, ',', '.')|escape('js') }}', 
                                                '4.5', 
                                                '{{ prestador.quantidade_favorito|escape('js') }}', 
                                                '{{ prestador.foto ? '/uploads/' ~ prestador.foto|escape('js') : '/img/fotoperfil.jpg'|escape('js') }}',
                                                '{{ prestador.sobre|escape('js') }}',
                                                '{{ prestador.whatsapp|default('')|escape('js') }}',
                                                '{{ prestador.celular|default('')|escape('js') }}',
                                                '{{ prestador.facebook|default('')|escape('js') }}'
                                            )" 
                                                class="w-full bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-4 rounded-md transition-colors">
                                                Ver Perfil
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>

                        <button aria-label="Previous" class="glider-prev absolute left-0 top-1/2 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-md hover:bg-gray-100 transition-colors">
                            <i class="bi bi-chevron-left text-gray-700 text-xl"></i>
                        </button>
                        <button aria-label="Next" class="glider-next absolute right-0 top-1/2 transform -translate-y-1/2 bg-white p-3 rounded-full shadow-md hover:bg-gray-100 transition-colors">
                            <i class="bi bi-chevron-right text-gray-700 text-xl"></i>
                        </button>
                    </div>
                </div>
            </section>
        {% else %}
            <!-- Mensagem quando não há prestadores -->
            <section class="py-12 bg-gray-50">
                <div class="max-w-7xl mx-auto px-6 text-center">
                    <p class="text-gray-600 text-lg mb-6">Nenhum prestador disponível nesta categoria no momento.</p>
                    <a href="/servicos" class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-6 rounded-full transition-colors">
                        Voltar para categorias
                    </a>
                </div>
            </section>
        {% endif %}
    {% else %}
        <!-- CARDS DAS CATEGORIAS -->
        <section class="py-12 bg-gray-50">
            <div class="max-w-7xl mx-auto px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    <!-- Babá -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                        <div class="p-8 text-center">
                            <i class="bi bi-person-bounding-box text-5xl text-yellow-500 mb-4"></i>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">Babá</h3>
                            <p class="text-gray-600 mb-6">Profissionais para cuidar de crianças com responsabilidade e carinho.</p>
                            <a href="/servicos?categoria=1"
                                class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-6 rounded-full transition-colors">
                                Ver Prestadores
                            </a>
                        </div>
                    </div>

                    <!-- Faxina e Limpeza Residencial -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                        <div class="p-8 text-center">
                            <i class="bi bi-house-gear text-5xl text-yellow-500 mb-4"></i>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">Faxina e Limpeza Residencial</h3>
                            <p class="text-gray-600 mb-6">Diaristas especializadas em manter seu lar limpo e organizado.</p>
                            <a href="/servicos?categoria=2"
                                class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-6 rounded-full transition-colors">
                                Ver Prestadores
                            </a>
                        </div>
                    </div>

                    <!-- Jardinagem -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                        <div class="p-8 text-center">
                            <i class="bi bi-flower1 text-5xl text-yellow-500 mb-4"></i>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">Jardinagem</h3>
                            <p class="text-gray-600 mb-6">Serviços de cuidado com jardins e áreas verdes.</p>
                            <a href="/servicos?categoria=3"
                                class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-6 rounded-full transition-colors">
                                Ver Prestadores
                            </a>
                        </div>
                    </div>

                    <!-- Mudança e Frete -->
                    <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-[1.02]">
                        <div class="p-8 text-center">
                            <i class="bi bi-truck text-5xl text-yellow-500 mb-4"></i>
                            <h3 class="text-xl font-bold text-gray-800 mb-2">Mudança e Frete</h3>
                            <p class="text-gray-600 mb-6">Auxílio em mudanças e transporte de objetos com segurança.</p>
                            <a href="/servicos?categoria=4"
                                class="inline-block bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-6 rounded-full transition-colors">
                                Ver Prestadores
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

    <!-- Modal do Prestador -->
    <div id="prestadorModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-lg max-w-2xl w-full mx-4 overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-start mb-6">
                    <div class="flex items-center gap-4">
                        <img id="modalFoto" src="" alt="" class="w-20 h-20 rounded-full object-cover">
                        <div>
                            <h3 id="modalNome" class="text-xl font-bold text-gray-800"></h3>
                            <p id="modalCategoria" class="text-gray-600"></p>
                        </div>
                    </div>
                    <button onclick="prestadorModal.close()" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>

                <div class="space-y-6">
                    <!-- Informações Básicas -->
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">Informações</h4>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-sm text-gray-600">Valor</p>
                                <p id="modalValor" class="font-medium"></p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">Avaliação</p>
                                <div class="flex items-center">
                                    <div id="modalAvaliacao" class="text-yellow-400"></div>
                                    <span id="modalQuantidadeFavorito" class="text-gray-500 text-sm ml-1"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sobre -->
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">Sobre</h4>
                        <p id="modalSobre" class="text-gray-600"></p>
                    </div>

                    <!-- Contato -->
                    <div>
                        <h4 class="font-semibold text-gray-800 mb-2">Contato</h4>
                        <div class="space-y-2">
                            <div id="modalWhatsapp" class="flex items-center text-gray-600">
                                <i class="fab fa-whatsapp text-green-500 mr-2"></i>
                                <span></span>
                            </div>
                            <div id="modalCelular" class="flex items-center text-gray-600">
                                <i class="fas fa-phone text-blue-500 mr-2"></i>
                                <span></span>
                            </div>
                            <div id="modalFacebook" class="flex items-center text-gray-600">
                                <i class="fab fa-facebook text-blue-600 mr-2"></i>
                                <span></span>
                            </div>
                        </div>
                    </div>

                    <!-- Botões de Ação -->
                    <div class="flex justify-end gap-4 pt-4 border-t">
                        <button onclick="prestadorModal.close()" class="px-6 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                            Fechar
                        </button>
                        <a href="#" id="modalContato" class="px-6 py-2 bg-primary-500 hover:bg-primary-600 text-white rounded-md">
                            Entrar em Contato
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <!-- Glider JS -->
    <script src="https://cdn.jsdelivr.net/npm/glider-js@1/glider.min.js"></script>

    <script>
        // Inicialização do Glider
        new Glider(document.querySelector('.glider'), {
            slidesToShow: 1,
            slidesToScroll: 1,
            draggable: true,
            dots: '.dots',
            arrows: {
                prev: '.glider-prev',
                next: '.glider-next'
            },
            responsive: [
                {
                    breakpoint: 640,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                },
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1
                    }
                },
                {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 1
                    }
                }
            ]
        });

        // Modal do Prestador
        const prestadorModal = {
            modal: document.getElementById('prestadorModal'),
            
            open: function(nome, categoria, valor, avaliacao, quantidadeFavorito, foto, sobre, whatsapp, celular, facebook) {
                // Preencher dados do modal
                document.getElementById('modalFoto').src = foto;
                document.getElementById('modalFoto').alt = nome;
                document.getElementById('modalNome').textContent = nome;
                document.getElementById('modalCategoria').textContent = categoria;
                document.getElementById('modalValor').textContent = valor;
                
                // Avaliação
                const avaliacaoElement = document.getElementById('modalAvaliacao');
                avaliacaoElement.innerHTML = '';
                for (let i = 0; i < 5; i++) {
                    const star = document.createElement('i');
                    star.className = i < Math.floor(avaliacao) ? 'fas fa-star' : 
                                   i < Math.ceil(avaliacao) ? 'fas fa-star-half-alt' : 
                                   'far fa-star';
                    avaliacaoElement.appendChild(star);
                }
                document.getElementById('modalQuantidadeFavorito').textContent = `(${quantidadeFavorito})`;
                
                // Sobre
                document.getElementById('modalSobre').textContent = sobre;
                
                // Contato
                const whatsappElement = document.getElementById('modalWhatsapp');
                const celularElement = document.getElementById('modalCelular');
                const facebookElement = document.getElementById('modalFacebook');
                
                if (whatsapp) {
                    whatsappElement.querySelector('span').textContent = whatsapp;
                    whatsappElement.style.display = 'flex';
                } else {
                    whatsappElement.style.display = 'none';
                }
                
                if (celular) {
                    celularElement.querySelector('span').textContent = celular;
                    celularElement.style.display = 'flex';
                } else {
                    celularElement.style.display = 'none';
                }
                
                if (facebook) {
                    facebookElement.querySelector('span').textContent = facebook;
                    facebookElement.style.display = 'flex';
                } else {
                    facebookElement.style.display = 'none';
                }
                
                // Link de contato
                const contatoLink = document.getElementById('modalContato');
                if (whatsapp) {
                    contatoLink.href = `https://wa.me/${whatsapp.replace(/\D/g, '')}`;
                } else if (celular) {
                    contatoLink.href = `tel:${celular.replace(/\D/g, '')}`;
                } else {
                    contatoLink.style.display = 'none';
                }
                
                // Exibir modal
                this.modal.style.display = 'flex';
            },
            
            close: function() {
                this.modal.style.display = 'none';
            }
        };

        // Fechar modal ao clicar fora
        document.getElementById('prestadorModal').addEventListener('click', function(e) {
            if (e.target === this) {
                prestadorModal.close();
            }
        });
    </script>
{% endblock %}
