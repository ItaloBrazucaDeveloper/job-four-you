{% extends "Layouts/main.layout.twig" %}

{% import "Partials/servicos/categorias.twig" as categorias %}
{% import "Partials/servicos/carrosel-prestadores/carrossel-prestadores.twig" as carrossel %}
{% import "Partials/servicos/modal-prestador/macro.twig" as modal %}

{% block title %}Serviços | Job4You{% endblock %}

{% block main %}
	<section class="bg-white py-12">
		<div class="max-w-7xl mx-auto px-6 text-center">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">
				{% if categorias|length > 0 %}
					{% set categoria = categorias|first %}
					Prestadores de {{ categoria.nome }}
				{% else %}
					Encontre Serviços Informais em Diversas Categorias
				{% endif %}
			</h1>
			<p class="text-xl text-gray-600">
				{% if categorias|length > 0 %}
					Profissionais qualificados nesta categoria
				{% else %}
					Todas as categorias disponíveis estão listadas abaixo
				{% endif %}
			</p>
		</div>
	</section>

	{% set mostrarCarrosel = categorias|length > 0 and prestadores|length > 0 %}

	{% if mostrarCarrosel %}
		{{ carrossel.render(prestadores) }}
	{% endif %}

	{{ categorias.render(categorias) }}

	{{ modal.render() }}
{% endblock %}
