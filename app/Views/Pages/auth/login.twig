{% extends "Layouts/main.layout.twig" %}

{% import "Components/label.twig" as Label %}
{% import "Components/input.twig" as Input %}
{% import "Components/button.twig" as Button %}
{% import "Components/checkbox.twig" as Checkbox %}
{% import "Components/link.twig" as Link %}

{% block title %}Login | Job4You{% endblock %}

{% block main %}
	<main class="flex-grow flex items-center justify-center py-12 px-4 md:px-6 lg:px-8">
		<div class="w-full max-w-md space-y-8">
			<!-- Título centralizado -->
			<div class="text-center">
				<h2 class="mt-6 text-3xl font-bold text-gray-900">
					Login
				</h2>
			</div>

			<!-- Formulário de login -->
			<form class="mt-8 space-y-6" action="/auth/login" method="POST">
				<div class="space-y-4">
					<!-- Campo de e-mail -->
					<div>
						{{ Label.render('email', 'E-mail') }}
						{{ Input.render('email', 'email', 'Seu e-mail', 'bi bi-envelope', 'email') }}
					</div>

					<!-- Campo de senha -->
					<div>
						{{ Label.render('senha', 'Senha') }}
						{{ Input.render('senha', 'password', 'Sua senha', 'bi bi-lock', 'current-password') }}
					</div>
				</div>

				<!-- Lembrar-me + Esqueceu a senha -->
				<div class="flex items-center justify-between">
					{{ Checkbox.render('remember-me', 'Lembrar-me') }}
					{{ Link.render('/recuperar-senha', 'Esqueceu sua senha?') }}
				</div>

				{{ Button.render('submit', 'Entrar') }}
			</form>

			<!-- Link para cadastro -->
			<div class="text-center">
				<span class="text-sm text-gray-600">
					Não tem uma conta?
					{{ Link.render('/usuarios/cadastro', 'Cadastre-se', 'text-gray-600 hover:text-gray-700') }}
				</span>
			</div>
		</div>
	</main>
{% endblock %}