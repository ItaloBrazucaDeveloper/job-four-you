{% extends "Layouts/main.layout.twig" %}

{% import "Macros/label.twig" as Label %}
{% import "Macros/input.twig" as Input %}
{% import "Macros/button.twig" as Button %}
{% import "Macros/checkbox.twig" as Checkbox %}
{% import "Macros/link.twig" as Link %}

{% block title %}Login | Job4You{% endblock %}

{% block main %}
	<main class="flex-grow flex items-center justify-center py-12 px-4 md:px-6 lg:px-8">
		<div class="w-full max-w-md space-y-8">
			<div class="text-center">
				<h2 class="mt-6 text-3xl font-bold text-gray-900">
					Login
				</h2>
			</div>

			<form class="mt-8 space-y-6" action="/autenticacao" method="POST">
				<div class="space-y-4">
					<div>
						{{ Label.render('email', 'E-mail') }}
						{{ Input.render(name: 'email', type: 'email', placeholder: 'Seu e-mail', icon: 'bi bi-envelope', autocomplete: 'email') }}
					</div>

					<div>
						{{ Label.render('senha', 'Senha') }}
						{{ Input.render(name: 'senha', type: 'password', placeholder: 'Sua senha', icon: 'bi bi-lock', autocomplete: 'current-password') }}
					</div>
				</div>

				{# Lembrar-me + Esqueceu a senha #}
				<div class="flex items-center justify-between">
					{{ Checkbox.render('remember-me', 'Lembrar-me') }}
					{{ Link.render('/recuperar-senha', 'Esqueceu sua senha?') }}
				</div>

				{{ Button.render('submit', 'Entrar') }}
			</form>

			{# Link para cadastro #}
			<div class="text-center">
				<span class="text-sm text-gray-600">
					NÃ£o tem uma conta?
					{{ Link.render('/usuarios/cadastro', 'Cadastre-se', 'text-gray-600 hover:text-gray-700') }}
				</span>
			</div>
		</div>
	</main>
{% endblock %}