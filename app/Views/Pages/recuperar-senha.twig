{% extends "Layouts/main.layout.twig" %}

{% block  main %}
  <main class="flex-grow flex items-center justify-center py-12 px-4 md:px-6">
    <div class="w-full max-w-md space-y-8">
      <header class="text-center">
        <i class="bi bi-shield-lock text-primary-500 text-5xl mb-4"></i>
        <h2 class="mt-2 text-3xl font-bold text-gray-900">Recuperar Senha</h2>
        <p class="mt-2 text-sm text-gray-600">Digite seu e-mail para receber um link de recuperação</p>
      </header>

      {% if flash_message %}
        {{ Alert.render(flash_message.type, flash_message.type) }}
      {% endif %}

      <form class="mt-8 space-y-6" action="/recuperar-senha" method="POST">
        <div class="rounded-md shadow-sm space-y-4">
          <!-- Campo de e-mail -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">E-mail</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="bi bi-envelope text-gray-400"></i>
              </div>
              <input id="email" name="email" type="email" required
                class="py-2 pl-10 block w-full border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                placeholder="Seu e-mail cadastrado" value="<?= htmlspecialchars($_POST['email'] ?? '') ?>">
            </div>
          </div>
        </div>

        <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-500 hover:bg-primary-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
          Enviar código de Recuperação
        </button>
      </form>
    </div>
  </main>
{% endblock %}